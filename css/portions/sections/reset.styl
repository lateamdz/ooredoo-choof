.back-top
	bottom 125px
	margin 0
	padding 0
	position fixed
	right 20px
	z-index 999999999
	a
		background $red
		border-radius 50%
		color #fff
		display block
		opacity 1
		font-family "FontAwesome"
		height 55px
		line-height 50px
		text-align center
		transition background 300ms ease 0s
		width 55px
		&:after
			content "\f106"
			display inline
			font-size 30px

priceTag($pricef = 20px , $pricelh = 20px , $pricec = #000  , $currencyf = 18px , $currencylh = 18px, $currencyc = #000, $blh = 10px , $ff = 'ooredoobold' , $validityc = #eee, $validityf = 15px)
	.price
		line-height $blh
		.price-hero
			direction: ltr
			.price-unit
				font-family $ff
				font-size $pricef
				line-height $pricelh
				color: $pricec
			.currency
				font-family $ff
				font-size $currencyf
				line-height $currencylh
				color: $currencyc
				vertical-align: top
				.small
					font-size $currencyf - 10px
			.validity
				color: $validityc
				font-size $validityf
				


.expandTiggerContainer{
	position relative
	overflow: hidden
	.expandTiggerIcon{
		img{
			color $red
			position absolute
			left: 10px
			top: 7px
		}
	}
	.expandTiggerText,{
		a.expandTigger{
			display none
			box-shadow none
			&.active{
				width 100%
				display block
				font-size 16px
				font-family $ob
				text-decoration none
				
			}
		}
		a.collapseTrigger{
			width 100%
			margin-bottom 20px
			font-size 16px
			font-family $ob
			text-decoration none
			box-shadow none
			&.active{
				display block
			}
		}
	}
}

@media (max-width: $medium){
	.expandable{
		height 0
		opacity 0
		transition .2s all ease
		visibility hidden
		display none
		&.active{
			height auto
			opacity 1
			transition .2s all ease
			visibility visible
			display block
		}
	}

}	
		


.current{
	font-size 30px
	color: $red !important
	display none
	i{
		color: $red
	}
}


@media (max-width: $xsmall){
	.hidden-xxs{
		display none !important
	}
	
	.current{
		display block !important
	}
}


@media (min-width: $xsmall){
	.accessibilities.mobile{
		display none !important
	}
}

.accessibilities.mobile{
	position: absolute
	right: 0
	text-align: right
	top: 76px
	width: 165px
	z-index: 999
	background $white
	padding 10px
	box-shadow: -1px 2px 3px rgba(0,0,0,0.35)
}

