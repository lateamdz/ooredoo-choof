.btn-custom
	background $red
	color: $white
	position relative
	&:hover,
	&:active,
	&:focus
		color: $red
		background $white
		border 1px solid $red
	&:before
		content: ""
		position: absolute
		top: 50%
		left: 50%
		width: 0
		height: 0
		background: #dd141b
		opacity: 1
		-moz-border-radius: 4px
		-webkit-border-radius: 4px
		border-radius: 4px
		-webkit-transition: all 0s ease-in-out
		-o-transition: all 0s ease-in-out
		transition: all 0s ease-in-out

	&:hover:before	
		opacity: 0
		height: 100%
		width: 100%
		top: 0
		right: 0
		bottom: 0
		left: 0
		-webkit-transition: all 0.5s ease-out
		-o-transition: all 0.5s ease-out
		transition: all 0.5s ease-out
.btn-download
	a
		background $white
		color: $red
		border 2px solid $white
		position relative
		&:hover,
		&:active,
		&:focus
			background: none
			color: $white
			border 2px solid $white
		&:before
			content: ""
			position: absolute
			top: 50%
			left: 50%
			width: 0
			height: 0
			background: none
			opacity: 1
			-moz-border-radius: 4px
			-webkit-border-radius: 4px
			border-radius: 4px
			-webkit-transition: all 0s ease-in-out
			-o-transition: all 0s ease-in-out
			transition: all 0s ease-in-out
			border 1px solid $white

		&:hover:before
			opacity: 0
			height: 100%
			width: 100%
			top: 0
			right: 0
			bottom: 0
			left: 0
			-webkit-transition: all 0.5s ease-out
			-o-transition: all 0.5s ease-out
			transition: all 0.5s ease-out


