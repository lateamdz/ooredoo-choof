//my-accounte
@import nib;

@import 'sections/colors.styl';


.md-forfait-appel{
	.section-title{
		sectionTitle(#6abeda , $white , 29px , 24px)
	}
	.section-content{
		background #9cd4e7
		padding 30px 0 0
		.cardInfo{
			width 100%
			padding 15px
			background $white
			border-radius $radius
			margin-bottom 30px
			box-shadow 0 3px 5px 0px rgba(0,0,0,0.35)
			border unquote('1px solid #eee\9')
			.cardTop{
				width: 100%;
				overflow: hidden;
				.duration{
					priceTag(80px, 80px, $black , 40px , 40px , $black , 10px ,$ob , $lightgrey , 12px)
					height: 85px;
					display: table;
					float: left;
					width: auto;
					.price{
						vertical-align middle
						display table-cell
					}
				}
				.capacity{
					priceTag(48px, 48px, #808080 , 28px , 32px , #808080 , 10px ,$ob , #808080 , 28px)
					height: 85px;
					float: right;
					display: table;
					width: auto;
					.price{
						vertical-align middle
						display table-cell
					}
				}
			}
			.cardBottom{
				width: 100%;
				overflow: hidden;
				.cost{
					priceTag(52px, 52px, $red , 30px , 35px , $red , 10px ,$ob , $red , 28px)
					height: 85px;
					display: table;
					width: 50%;
					float: left;
					.price{
						vertical-align bottom
						display table-cell
					}
				}
				.buy{
					display: table;
					height: 85px;
					width: 50%;
					.action{
						display table-cell
						vertical-align bottom
						.btn{
							font-family $or
							font-size 18px
							width 100%
							height 50px
							line-height 35px
							i{
								margin-right 10px
							}
						}
						.icon-cart {
							font-size: 150% !important;
							position: relative;
							top:4px;
							display: inline-block;
						}
					}
				}
			}
		}

	}
	
}			



