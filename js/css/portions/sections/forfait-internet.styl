@import nib;

@import 'sections/colors.styl';


.md-forfait-internet{
	.section-title{
		sectionTitle(#dbddde , $black , 29px , 24px)
	}
	.section-content{
		background #f6f7f8
		padding 30px 0 0
		.cardInfo{
			width 100%
			padding 15px
			background $white
			border-radius $radius
			margin-bottom 30px
			box-shadow 0 3px 5px 0px rgba(0,0,0,0.35)
			border unquote('1px solid #eee\9')
			.cardTop{
				width: 100%;
				overflow: hidden;
				.duration{
					priceTag(80px, 80px, $black , 40px , 40px , $black , 10px ,$ob , $lightgrey , 12px)
					height: 85px;
					display: table;
					float: left;
					width: auto;
					.price{
						vertical-align middle
						display table-cell
					}
					.capaciteSpec {
						.price-unit {
							font-size 40px !important;
							line-height: 40px !important;
						}
						.to {
							font-size: 23px !important;
						}
						.currency {
							font-size: 24px !important;
						}
					}
					&.small{
						.price{
							.price-hero{
								.price-unit{
									font-size 45px
									line-height 40px
								}
								.to{
									font-size: 25px
									line-height: 21px
								}
								.hours{
									font-size: 27px
									line-height: 24px
									font-family $ob
								}

							}

						}
					}
				}
				.capacity{
					priceTag(48px, 48px, #808080 , 28px , 32px , #808080 , 10px ,$ob , #808080 , 28px)
					height: 85px;
					float: right;
					display: table;
					width: auto;
					.price{
						vertical-align middle
						display table-cell
					}
					.capaciteSpec{
						font-size: 37px !important;
						line-height: 25px !important;
						max-width: 151px;
						display: inline-block;
						.blue{
							font-family: 'ooredoobold';
							color:#3b589d;
							font-size 31px !important;
							padding-bottom 5px;
							display inline-block;
							margin-bottom 3px;
						}
					}
					.appIll{
						line-height: 38px !important;
					}

				}

			}
			.cardBottom{
				width: 100%;
				overflow: hidden;
				.cost{
					priceTag(41px, 40px, $red , 28px , 28px , $red , 10px ,$ob , $red , 28px)
					height: 85px;
					display: table;
					width: 50%;
					float: left;
					.price{
						vertical-align bottom
						display table-cell
					}
				}
				.buy{
					display: table;
					height: 85px;
					width: 50%;
					.action{
						display table-cell
						vertical-align bottom
						.btn{
							font-family $or
							font-size 18px
							width 100%
							height 50px
							line-height 35px
							i{
								margin-right 10px
							}
						}
						.icon-cart {
							font-size: 150% !important;
							position: relative;
							top:4px;
							display: inline-block;
						}
					}
				}
			}
		}
		.cardInfo.fb{
			/* Permalink - use to edit and share this gradient: http://colorzilla.com/gradient-editor/#00040f+0,096ac2+40,096ac2+62,00040f+100 */
			background: #00040f; /* Old browsers */
			background: -moz-linear-gradient(left, #00040f 0%, #096ac2 40%, #096ac2 52%, #00040f 100%); /* FF3.6-15 */
			background: -webkit-linear-gradient(left, #00040f 0%,#096ac2 40%,#096ac2 52%,#00040f 100%); /* Chrome10-25,Safari5.1-6 */
			background: linear-gradient(to right, #00040f 0%,#096ac2 40%,#096ac2 52%,#00040f 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
			.capaciteSpec {
				.blue {
					color: #3b67b5 !important;
					padding: 2px !important;
					background: #fff;
					letter-spacing: -1px;
					margin-bottom: 5px !important;
				}
			}
			.cardTop{
				.duration{
					.price{
						.price-hero{
							.price-unit {
								color: #fff !important;
							}
							.currency{
								color: #fff !important;
							}
						}
					}
				}
				.capacity{
					.price{
						.price-hero{
							.price-unit {
								color: #fff !important;
							}
						}
					}
				}
			}
		}
		.cardInfo.night{
			background :url("../images/bg-night.jpg") repeat center;
			.cardTop{
				.duration{
					.price{
						.price-hero{
							.price-unit {
								color: #fff !important;
							}
							.currency{
								color: #fff !important;
							}


						}

					}
					.capaciteSpec {
						.to {
							color: #fff !important;
						}
					}
				}
				.capacity{
					.price{
						.price-hero{
							.price-unit {
								color: #fff !important;
							}
							.validity {
								color: #fff !important;
							}
							.currency {
								color: #fff !important;
							}
						}
					}
				}
			}
		}

	}
}			



